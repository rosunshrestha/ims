<%= form_for(@category) do |f| %>
    <% if @category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@category.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label 'Category Name' %><br>
      <%= f.text_field :name %>
    </div>

        <%=f.fields_for :products do |index,product| %>

        <h2>Product <%=index%></h2>
                <div class="field">
          <%= product.label :name %><br>
          <%= product.text_field :name %>
        </div>
        <div class="field">
          <%= product.label :description %><br>
          <%= product.text_field :description %>
        </div>
        <div class="field">
          <%= product.label :price %><br>
          <%= product.number_field :price %>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


