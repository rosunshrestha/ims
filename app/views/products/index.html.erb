<div id='notice'><%= notice %></div>

<h1>Listing Products</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr id="product_<%=product.id%>">
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', category_product_path(product.category,product) %></td>
        <td><%= link_to 'Edit', edit_category_product_path(product.category,product) %></td>
        <td><%= link_to 'Destroy', category_product_path(product.category,product), remote: true, method: :delete%></td>
       </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Enter New Product', new_category_product_path %>
